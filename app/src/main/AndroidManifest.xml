<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookie.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="app.cookie.app.dependency.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="app.cookie.app.view.recipeslist.RecipeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.cookie.app.view.recipedetails.RecipeDetailsActivity"
            android:parentActivityName="app.cookie.app.view.recipeslist.RecipeListActivity" />
        <activity
            android:name="app.cookie.app.view.stepdetails.StepDetailsActivity"
            android:parentActivityName="app.cookie.app.view.recipedetails.RecipeDetailsActivity"></activity>

        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <receiver android:name=".CookieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/cookie_widget_info" />
        </receiver>
    </application>

</manifest>